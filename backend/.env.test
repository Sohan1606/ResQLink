# Environment
NODE_ENV=test
PORT=5001

# Test Database (Local MongoDB)
MONGO_URI=mongodb://localhost:27017/resqlink_test

# Frontend Test URLs
FRONTEND_DEV_URL=http://localhost:5173
FRONTEND_TEST_URL=http://localhost:5174

# JWT (Test secrets - shorter for testing)
JWT_SECRET=test-jwt-secret-2026-change-in-prod
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=24h

# Email (Disabled for tests - use test SMTP)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=test@ethereal.email
EMAIL_PASS=test-password
FROM_EMAIL=test@resqlink.local

# File Uploads (Disabled/Mock for tests)
CLOUDINARY_CLOUD_NAME=test
CLOUDINARY_API_KEY=test
CLOUDINARY_API_SECRET=test
UPLOAD_MAX_SIZE=1048576  # 1MB for tests
FILE_UPLOAD_ENABLED=false

# Testing Configuration
TEST_SEED_DATA=true
TEST_MAX_USERS=50
TEST_MAX_LISTINGS=200
SKIP_EMAIL_VERIFICATION=true
SKIP_IMAGE_UPLOAD=true

# Rate Limiting (Disabled for tests)
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_MAX=1000

# CORS (Test origins only)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173

# Logging (Verbose for debugging)
LOG_LEVEL=debug
TEST_RUN_ID=test-run-2026-01-08

# MongoDB Test Settings
MONGO_DEBUG=true
DROP_TEST_DB_ON_START=true
KEEP_TEST_DB_AFTER_RUN=false
