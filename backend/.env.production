# Environment
NODE_ENV=production

# Server
PORT=5000
HOST=0.0.0.0

# Database (Replace with your MongoDB Atlas connection string)
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/resqlink_prod?retryWrites=true&w=majority

# Frontend URLs
FRONTEND_PROD_URL=https://resqlink.com
FRONTEND_DEV_URL=http://localhost:5173

# JWT & Auth (Generate these securely)
JWT_SECRET=your-super-secure-64-char-secret-key-here-change-this
JWT_EXPIRE=30d
JWT_REFRESH_EXPIRE=7d

# Email (Use your service - SendGrid/Mailgun recommended)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
FROM_EMAIL=noreply@resqlink.com

# File Uploads (Cloudinary recommended)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
UPLOAD_MAX_SIZE=5242880  # 5MB

# Classifieds Platform Specific
MAX_LISTINGS_PER_USER=10
MAX_IMAGES_PER_LISTING=8
GEOLOCATION_ENABLED=true
CATEGORY_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Security
ALLOWED_ORIGINS=https://resqlink.com,http://localhost:5173
CORS_CREDENTIALS=true
